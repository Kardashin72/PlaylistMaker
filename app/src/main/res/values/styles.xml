<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/main_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/main_margin_vertical</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/main_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsMenuButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/settings_buttons_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SettingsButtonsBarStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textTop</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/main_margin_horizontal</item>
        <item name="android:paddingVertical">@dimen/main_margin_vertical</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:drawablePadding">@dimen/main_margin_horizontal</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="CustomHintTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColorHint">?attr/colorSearchHintText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="MaterialToolbarTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_font_size</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


</resources>