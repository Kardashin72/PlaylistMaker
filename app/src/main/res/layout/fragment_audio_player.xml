<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context="com.practicum.playlistmaker.player.presentation.ui.PlayerFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuidline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightGuidline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="24dp"/>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/audioPlayerTopbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/arrow_back"
                app:navigationIconTint="?attr/colorOnPrimary"/>

            <ImageView
                android:id="@+id/playerTrackArtwork"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="26dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toStartOf="@id/rightGuidline"
                app:layout_constraintStart_toEndOf="@id/leftGuidline"
                app:layout_constraintTop_toBottomOf="@id/audioPlayerTopbar"/>

            <TextView
                android:id="@+id/playerTrackName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                android:textFontWeight="400"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@id/rightGuidline"
                app:layout_constraintStart_toEndOf="@id/leftGuidline"
                app:layout_constraintTop_toBottomOf="@id/playerTrackArtwork"/>

            <TextView
                android:id="@+id/playerArtistName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/rightGuidline"
                app:layout_constraintStart_toEndOf="@id/leftGuidline"
                app:layout_constraintTop_toBottomOf="@id/playerTrackName"/>


            <ImageButton
                android:id="@+id/addToPlaylistButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/player_buttons_background"
                android:src="@drawable/add_to_playlist_button"
                app:layout_constraintBottom_toBottomOf="@id/playButton"
                app:layout_constraintStart_toEndOf="@id/leftGuidline"
                app:layout_constraintTop_toTopOf="@id/playButton"/>

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:background="?attr/colorPrimary"
                android:src="@drawable/play_button"
                app:layout_constraintEnd_toStartOf="@id/likeButtonsBarrier"
                app:layout_constraintStart_toEndOf="@id/addToPlaylistButton"
                app:layout_constraintTop_toBottomOf="@id/playerArtistName"
                app:tint="?attr/colorOnPrimary"/>

            <ImageButton
                android:id="@+id/pauseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:background="?attr/colorPrimary"
                android:src="@drawable/pause_button"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/likeButtonsBarrier"
                app:layout_constraintStart_toEndOf="@id/addToPlaylistButton"
                app:layout_constraintTop_toBottomOf="@id/playerArtistName"
                app:tint="?attr/colorOnPrimary"/>

            <ImageButton
                android:id="@+id/likeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/player_buttons_background"
                android:src="@drawable/like_button"
                app:layout_constraintBottom_toBottomOf="@id/playButton"
                app:layout_constraintEnd_toStartOf="@id/rightGuidline"
                app:layout_constraintTop_toTopOf="@id/playButton"/>

            <ImageButton
                android:id="@+id/likeButtonActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/player_buttons_background"
                android:src="@drawable/like_button_active"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/playButton"
                app:layout_constraintEnd_toStartOf="@id/rightGuidline"
                app:layout_constraintTop_toTopOf="@id/playButton"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/likeButtonsBarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="start"
                app:constraint_referenced_ids="likeButton,likeButtonActive" />

            <TextView
                android:id="@+id/trackTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/ys_display_medium"
                android:textColor="?attr/colorOnPrimary"
                android:textFontWeight="500"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/rightGuidline"
                app:layout_constraintStart_toEndOf="@id/leftGuidline"
                app:layout_constraintTop_toBottomOf="@id/playButton"/>

            <TextView
                android:id="@+id/trackTimeTitle"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:text="@string/track_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trackTimer"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="trackTimeTitle"/>

            <TextView
                android:id="@+id/trackTime"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="9dp"
                android:paddingBottom="8dp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trackTimer"/>

            <TextView
                android:id="@+id/collectionNameTitle"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="16dp"
                android:text="@string/collection_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trackTimeTitle"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="collectionNameTitle"/>

            <TextView
                android:id="@+id/collectionName"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/barrier_2"
                app:layout_constraintTop_toBottomOf="@id/trackTime"/>

            <TextView
                android:id="@+id/releaseDateTitle"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="16dp"
                android:text="@string/release_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/collectionNameTitle"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="releaseDateTitle"/>

            <TextView
                android:id="@+id/releaseDate"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/collectionName"/>

            <TextView
                android:id="@+id/primaryGenreNameTitle"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="16dp"
                android:text="@string/genre_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/releaseDateTitle"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="primaryGenreNameTitle"/>

            <TextView
                android:id="@+id/primaryGenreName"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/releaseDate"/>

            <TextView
                android:id="@+id/countryTitle"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                android:text="@string/country"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/primaryGenreNameTitle"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="countryTitle"/>

            <TextView
                android:id="@+id/country"
                style="@style/AudioplayerBottomTextView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/primaryGenreName"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/playlists_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="240dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/add_to_playlist"
            android:textSize="19sp"
            android:textFontWeight="500"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/new_playlist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/new_playlist"
            android:backgroundTint="?attr/colorOnPrimary"
            android:textColor="?attr/colorPrimary"
            app:cornerRadius="54dp"
            android:fontFamily="@font/ys_display_medium"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textFontWeight="500">
        </Button>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlists_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>