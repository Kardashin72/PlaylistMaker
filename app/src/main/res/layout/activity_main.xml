<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_Blue"
    android:orientation="vertical">

    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/YP_White"
        android:textSize="@dimen/main_font_size"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_vertical"
        android:layout_marginStart="@dimen/margin_horizontal">
    </TextView>

    <Button
        android:id="@+id/search_but"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/YP_White"
        app:cornerRadius="@dimen/corner_radius"
        android:text="@string/text_search"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/main_font_size"
        android:textAllCaps="false"
        app:icon="@drawable/search_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/YP_Black"
        android:foreground="?attr/selectableItemBackground"
        >
    </Button>

    <Button
        android:id="@+id/media_library_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_vertical"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:backgroundTint="@color/YP_White"
        app:cornerRadius="@dimen/corner_radius"
        android:text="@string/text_media_library"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/main_font_size"
        android:textAllCaps="false"
        app:icon="@drawable/media_library_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/YP_Black"
        android:foreground="?attr/selectableItemBackground"
        >
    </Button>

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/margin_vertical"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:backgroundTint="@color/YP_White"
        app:cornerRadius="@dimen/corner_radius"
        android:text="@string/text_settings"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/main_font_size"
        android:textStyle="normal"
        android:textAllCaps="false"
        app:icon="@drawable/settings_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/YP_Black"
        android:foreground="?attr/selectableItemBackground"
        >
    </Button>

</LinearLayout>