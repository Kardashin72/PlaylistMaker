<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/track_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="61dp"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/search_recycle_view_vertical_padding"
    android:paddingStart="@dimen/search_recycle_view_horizontal_padding">

    <ImageView
        android:id="@+id/trackArtwork"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/placeholder">

    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/search_recycle_view_vertical_padding"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="?attr/colorOnPrimary"
            android:textFontWeight="400"
            android:textSize="@dimen/settings_buttons_font_size"
            android:maxLines="1"
            android:ellipsize="end">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/trackArtistName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:textSize="11sp"
                android:textColor="?attr/colorSecondaryVariant"
                android:maxLines="1"
                android:ellipsize="end">
            </TextView>

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/dot"
                android:drawableTint="?attr/colorSecondaryVariant"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:textSize="11sp"
                >
            </TextView>
        </LinearLayout>



    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward_icon"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/search_recycle_view_horizontal_padding"

        >
    </ImageView>

</LinearLayout>
