<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_library_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".medialibrary.presentation.ui.MediaLibraryFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutMediaLibrary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:liftOnScroll="false"
        android:stateListAnimator="@null">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarMediaLibrary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:title="@string/text_media_library"
            app:titleTextAppearance="@style/TextAppearanceAppbar"
            app:navigationIcon="@drawable/arrow_back"
            app:navigationIconTint="?attr/colorOnPrimary"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutMediaLibrary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:tabTextAppearance="@style/TextAppearanceTabLayout"
            app:tabSelectedTextAppearance="@style/TextAppearanceTabLayout"
            app:tabTextColor="?attr/colorOnPrimary"
            app:tabSelectedTextColor="?attr/colorOnPrimary"
            app:tabIndicator="@drawable/tab_indicator_draw"
            app:tabIndicatorColor="?attr/colorOnPrimary"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMediaLibrary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutMediaLibrary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>